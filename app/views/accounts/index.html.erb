<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>A service</th>
      <th>A username</th>
      <th>A pass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.a_service %></td>
        <td><%= account.a_username %></td>
        <td><%= account.a_pass %></td>
        <td><%= link_to '?', account %></td>
        <td><%= link_to image_tag("icon_edit.png"), edit_account_path(account) %></td>
        <td><%= link_to image_tag("icon_destroy.png"), account, method: :delete, data: { confirm: 'Data cannot be recovered. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
